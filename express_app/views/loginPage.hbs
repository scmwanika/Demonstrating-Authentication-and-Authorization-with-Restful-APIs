<div class="flex-container">
  <!-- LOGIN FORM -->
  <form method="POST" action="/restful/api/v1/login">
    <legend>Implementing Web Services APIs, Authentication and Authorization</legend>
    <p style="text-align: center;">
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Email"
        required
      /><br />
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Password"
        required
      /><br />
      <button class="btn btn-success submit">Login</button><br />
    </p>
  </form>
</div>